class Spinner
  Baton = '\|/-'
  def initialize
    STDOUT.flush
    @running = true
    @spinthread = Thread.new do
      rotation = 0
      while @running
        STDERR.printf "%c\b", Baton[(rotation+=1) & 3]
        sleep 0.2
      end
      STDERR.printf " \b"    # erase the last baton character
    end
  end
  
  def stop
    @running = false
    @spinthread.run    # prompt spinner to clean up
    @spinthread.join   # and wait for it to do so
  end
end
